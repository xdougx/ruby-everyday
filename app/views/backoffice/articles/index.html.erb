<div class="row">
  <div class="col-lg-12">
  <h1 class="page-header">
    Articles <small> Overview</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <i class="fa fa-dashboard"></i> <a href="/backoffice">Dashboard</a>
    </li>
    <li class="active">
      <i class="fa fa-newspaper-o"></i> Articles
    </li>
  </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <p><%= link_to "Create new Article", new_backoffice_article_path, class: "btn btn-primary"%></p>
        <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Subject</th>
            <th>permalink</th>
            <th>category</th>
            <th>status</th>
            <th>published in</th>
            <th>created at</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article|%>
          <tr>
            <td><%= link_to article.subject, backoffice_article_path(id: article.id) %></td>
            <td><%= article.permalink %></td>
            <td><%= article.category.title %></td>
            <td><%= article.status %></td>
            <td><%= article.draft? ? "" : l(article.published_in, format: "%d/%m/%Y %T")  %></td>
            <td><%= l(article.created_at, format: "%d/%m/%Y") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>