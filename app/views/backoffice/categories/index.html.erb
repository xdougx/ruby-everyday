<div class="row">
  <div class="col-lg-12">
  <h1 class="page-header">
    Categories <small> Overview</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <i class="fa fa-dashboard"></i> <a href="/backoffice">Dashboard</a>
    </li>
    <li class="active">
      <i class="fa fa-newspaper-o"></i> Categories
    </li>
  </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <p><%= link_to "Create new Category", new_backoffice_category_path, class: "btn btn-primary"%></p>
        <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Url</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category|%>
          <tr>
            <td><%= link_to category.title, backoffice_category_path(id: category.id) %></td>
            <td><%= category.url %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>