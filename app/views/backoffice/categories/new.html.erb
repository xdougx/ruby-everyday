<div class="row">
  <div class="col-lg-12">
  <h1 class="page-header">
    Categories <small> New</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <i class="fa fa-dashboard"></i> <a href="/backoffice">Dashboard</a>
    </li>
    <li>
      <i class="fa fa-newspaper-o"></i> <a href="/backoffice/categories">Categories</a>
    </li>
    <li class="active">
      <i class="fa fa-newspaper-o"></i> New Category
    </li>
  </ol>
  </div>
</div>

<% if @error %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-exclamation-triangle"></i>  <span><%= @error[:error][:full_message] %></span>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-3">
    <%= form_tag "/backoffice/categories", role: 'form', method: :post do %>      
      <div class="form-group">
        <label for="category_title">Title</label>
        <input type="text" id="category_title" class="form-control" name="category[title]">
      </div>

      
      <div class="form-group">
        <label for="category_tags">Url</label>
        <input type="text" id="category_tags" class="form-control" name="category[url]">
      </div>

      <div class="center">
        <button class="btn btn-primary">Save</button>
      </div>
    <% end %>
  </div>
</div>
