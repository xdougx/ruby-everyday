<section class="row">
  <h1 class="principal" style="font-size: 35px;">
    <a href="/"><i class="fa fa-diamond"></i> Ruby Everyday</a>
  </h1>
  <article class="center col-md-offset-3 col-md-6">
    
    <% if params[:login] == 'false' %>
      <div class="alert alert-danger">you must be logged in to access the backoffice</div>
    <% elsif @user.errors.any? %>
      <div class="alert alert-danger"><%= @user.errors.first[1] %></div>
    <% end %>

    <%= form_tag("/backoffice/authentication/authenticate", role: "form") do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Email" name="user[email]">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Frase" name="user[frase]">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Sign In</button>
      </div>
    <% end %>
  </article>
</section>